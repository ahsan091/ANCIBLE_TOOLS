# Shuffle Environment Configuration
# Generated by Ansible - Do not edit manually

ENVIRONMENT_NAME={{ shuffle_environment_name }}
LIQUID_SANITIZE_INPUT=true
SHUFFLE_APP_DOWNLOAD_LOCATION=https://github.com/shuffle/python-apps
SHUFFLE_APP_FORCE_UPDATE=false

# Leave empty for first-time setup via /adminsetup
SHUFFLE_DEFAULT_USERNAME={{ shuffle_default_username }}
SHUFFLE_DEFAULT_PASSWORD={{ shuffle_default_password }}
SHUFFLE_DEFAULT_APIKEY={{ shuffle_default_apikey }}

# App and file locations
SHUFFLE_APP_HOTLOAD_FOLDER=/opt/shuffle/shuffle-apps
SHUFFLE_APP_HOTLOAD_LOCATION=/opt/shuffle/shuffle-apps
SHUFFLE_FILE_LOCATION=/opt/shuffle/shuffle-files

# Security
SHUFFLE_ENCRYPTION_MODIFIER={{ shuffle_encryption_modifier }}

# Backend configuration
BASE_URL=http://shuffle-backend:{{ shuffle_backend_port }}
SSO_REDIRECT_URL=http://localhost:{{ shuffle_frontend_http_port }}
BACKEND_HOSTNAME=shuffle-backend
BACKEND_PORT={{ shuffle_backend_port }}

# Frontend configuration
FRONTEND_PORT={{ shuffle_frontend_http_port }}
FRONTEND_PORT_HTTPS={{ shuffle_frontend_https_port }}

OUTER_HOSTNAME=shuffle-backend
DB_LOCATION=/opt/shuffle/shuffle-database

# Docker API
DOCKER_API_VERSION=1.40

# Proxy settings (empty = no proxy)
HTTP_PROXY=
HTTPS_PROXY=
SHUFFLE_PASS_WORKER_PROXY=true
SHUFFLE_PASS_APP_PROXY=true
SHUFFLE_INTERNAL_HTTP_PROXY=noproxy
SHUFFLE_INTERNAL_HTTPS_PROXY=noproxy

# Timezone
TZ={{ timezone }}

# Kubernetes (disabled for Docker deployment)
IS_KUBERNETES=false

# Container settings
SHUFFLE_BASE_IMAGE_REPOSITORY=frikky
SHUFFLE_USE_GCHR_OVERRIDE_FOR_AUTODEPLOY=true
SHUFFLE_SWARM_BRIDGE_DEFAULT_INTERFACE=eth0
SHUFFLE_SWARM_BRIDGE_DEFAULT_MTU=1500
SHUFFLE_CONTAINER_AUTO_CLEANUP=true
SHUFFLE_ORBORUS_EXECUTION_CONCURRENCY=5

# Features
SHUFFLE_HEALTHCHECK_DISABLED=false
SHUFFLE_ELASTIC=true
SHUFFLE_LOGS_DISABLED=true
SHUFFLE_CHAT_DISABLED=false
SHUFFLE_DISABLE_RERUN_AND_ABORT=false
SHUFFLE_RERUN_SCHEDULE=300

# App replicas
SHUFFLE_APP_REPLICAS={{ shuffle_app_replicas }}

# OpenSearch configuration
SHUFFLE_OPENSEARCH_URL=https://shuffle-opensearch:9200
SHUFFLE_OPENSEARCH_SKIPSSL_VERIFY=true
SHUFFLE_OPENSEARCH_USERNAME=admin
SHUFFLE_OPENSEARCH_PASSWORD={{ shuffle_opensearch_password }}
OPENSEARCH_INITIAL_ADMIN_PASSWORD={{ shuffle_opensearch_password }}
