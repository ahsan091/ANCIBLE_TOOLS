# TheHive Environment Configuration
# Generated by Ansible - Do not edit manually

# User IDs for container permissions
UID={{ ansible_user_uid | default(1000) }}
GID={{ ansible_user_gid | default(1000) }}

# Pinned image versions
thehive_image_version={{ thehive_image_version }}
cassandra_image_version={{ cassandra_image_version }}
elasticsearch_image_version={{ elasticsearch_image_version }}
nginx_image_version={{ nginx_image_version }}
cortex_image_version={{ cortex_image_version }}

# Nginx configuration
nginx_server_name={{ thehive_nginx_server_name | default("localhost") }}
nginx_ssl_trusted_certificate={{ thehive_nginx_ssl_trusted_certificate | default("") }}

# Elasticsearch credentials
elasticsearch_password={{ thehive_elasticsearch_password | default("changeme") }}

# Elasticsearch 8.x configuration (fixes startup issues)
ES_JAVA_OPTS=-Xms512m -Xmx512m
discovery.type=single-node
xpack.security.enabled=false
xpack.security.enrollment.enabled=false
xpack.security.http.ssl.enabled=false
xpack.security.transport.ssl.enabled=false

# Cortex image (if needed by docker-compose.yml)
CORTEX_IMAGE=thehiveproject/cortex:{{ cortex_image_version }}
